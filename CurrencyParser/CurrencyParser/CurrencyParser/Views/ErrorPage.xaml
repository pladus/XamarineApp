<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurrencyParser.ErrorPage">
    <ContentPage.Resources>
        <StyleSheet Source="/Styles.css" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Spacing="30">
            <Label x:Name ="TitleAlert"  
                   Text=""  
                   FontAttributes="Bold"
                   VerticalOptions="Start" 
                   FontSize="Medium"
                   TextColor="Red"
                   HorizontalOptions="Center" />
            <Label x:Name ="Advice"  Text="" 
                   FontAttributes="Bold"
                   VerticalOptions="Start" 
                   HorizontalOptions="Center" />
            <Label x:Name ="ExceptionStateAlert"  
                   Text=""
                   VerticalOptions="Start" 
                   HorizontalOptions="Center" />
            <Label x:Name ="ExceptionLabel"  Text=""
                   VerticalOptions="Start" 
                   HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>